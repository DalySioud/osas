                                            <script>
                                                // Function to show/hide the date fields based on the selected value of the type field
                                                function handleDateFieldsVisibility() {
                                                    const typeField = document.getElementById('depense_type');
                                                    const dateFieldsRow = document.getElementById('date_fields_row');
                                                    const dateDebutField = document.getElementById('depense_date_debut');
                                                    const dateFinField = document.getElementById('depense_date_fin');

                                                    // Convert both the typeField.value and the comparison string to lowercase
                                                    const selectedType = typeField.value.toLowerCase();
                                                    const sponsoringType = 'sponsoring';

                                                    // If the selected value of the type field is 'Sponsoring', show the date fields
                                                    if (selectedType === sponsoringType) {
                                                        dateFieldsRow.style.display = 'block';
                                                    } else {
                                                        // Otherwise, hide the date fields and set their values to null
                                                        dateFieldsRow.style.display = 'none';
                                                        dateDebutField.value = '';
                                                        dateFinField.value = '';
                                                    }
                                                }

                                                // Add an event listener to the type field to call the handleDateFieldsVisibility function on change
                                                const typeField = document.getElementById('depense_type');
                                                typeField.addEventListener('change', handleDateFieldsVisibility);

                                                // Call the handleDateFieldsVisibility function on page load to initialize the visibility of the date fields
                                                handleDateFieldsVisibility();
                                            </script>

