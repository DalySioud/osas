{% extends 'base.html.twig' %}

{% block title %}Achat index{% endblock %}

{% block body %}
<div class="row row-sm">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Achats</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                     <div class="col-md-12 d-flex justify-content-end">
                        <a href="{{ path('app_achat_new') }}" class="btn buttons-copy buttons-html5 ml-auto" style="background-color: #2BC3EC; color: white;" tabindex="0" aria-controls="file-datatable" type="button">
                            <span>Ajouter</span>
                        </a>
                    </div>
                    <table id="file-datatable" class="table table-bordered text-nowrap key-buttons border-bottom dataTable no-footer" role="grid" aria-describedby="file-datatable_info">
                        <thead>
                            <tr role="row">
                                <th class="border-bottom-0 sorting sorting_asc" tabindex="0" aria-controls="file-datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Id Achat: activate to sort column descending" style="width: 90px;">Id Achat</th>
                                <th class="border-bottom-0 sorting" tabindex="0" aria-controls="file-datatable" rowspan="1" colspan="1" aria-label="Quantité: activate to sort column ascending" style="width: 100px;">Quantité</th>
                                <th class="border-bottom-0 sorting" tabindex="0" aria-controls="file-datatable" rowspan="1" colspan="1" aria-label="Commande: activate to sort column ascending" style="width: 100px;">Commande</th>
                                <th class="border-bottom-0 sorting" tabindex="0" aria-controls="file-datatable" rowspan="1" colspan="1" aria-label="product: activate to sort column ascending" style="width: 100px;">product</th>
                                <th class="border-bottom-0 sorting" tabindex="0" aria-controls="file-datatable" rowspan="1" colspan="1" aria-label="Action: activate to sort column ascending" style="width: 200px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for achat in achats %}
                            <tr class="odd">
                                <td class="sorting_1">{{ achat.id }}</td>
                                <td>{{ achat.quantite }}</td>
                                <td>{{ achat.commande.id }}</td>
                                <td>{{ achat.product.id }}</td>

                                <td>
                                    <a class="btn text-primary btn-sm"
                                        data-bs-toggle="tooltip"
                                        data-bs-original-title="Edit" href="{{ path('app_achat_edit', {'id': achat.id}) }}"><span
                                            class="fe fe-edit fs-14"></span></a>
                                    <a class="btn text-danger btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteConfirmationModal{{ achat.id }}"
                                        data-depense-id="{{ achat.id }}">
                                        <span class="fe fe-trash-2 fs-14" style="color: red; margin-left: 15px;"></span>
                                    </a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="15">no records found</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add the modal at the end of your template -->

{% endblock %}
